<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAppStyle"
    android:orientation="horizontal"
    android:padding="8dp">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imgPhoneItemGH"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#f12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/txtPhoneItemGH"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Ten Dien thoai"
            android:textSize="24sp" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:id="@+id/txtGiaPhoneItemGH"
            android:text="Gia"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:id="@+id/btnMinusItemGH"
                android:layout_height="wrap_content"
                android:text="-" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtSoLuongItemGH"
                android:gravity="center"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:layout_width="50dp"
                android:id="@+id/btnPlusItemGH"
                android:layout_height="wrap_content"
                android:text="+" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtThanhTienItemGH"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="Thành tiền"
            android:textSize="22sp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>